<div class="block">
  <%= render :partial => 'navigation/secondary', :locals => {:mode => 'my_logs'} %>
  <div class="content">            
    <h2 class="title">Login</h2>
    <div class="inner">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => :form }) do |f| %>

        <div class="group">        
          <%= f.label :email, :class => :label %>
          <%= f.email_field :email, :class => :text_field %>
          <span class="description">Ex: lobster@example.com</span>
        </div>

        <div class="group">        
          <%= f.label :password, :class => :label %>
          <%= f.password_field :password, :class => :text_field %>
          <span class="description">Ex: jellyfish123</span>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="group">        
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="group navform wat-cf">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Login")}") %> <%= t("web-app-theme.save", :default => "Login") %>
          </button>
          <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	        <%= link_to t("web-app-theme.cancel", :default => "Cancel"), root_path, :class => "text_button_padding link_button" %>
        </div>        
      <% end %>

      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
