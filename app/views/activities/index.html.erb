<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", activities_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_activity_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Activities</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.activity.description", :default => t("activerecord.labels.description", :default => "Description")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @activities.each do |activity| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= activity.id %>
          </td>
                    <td>
            <%= link_to activity.description, activity_path(activity) %>
          </td>
                    <td>
            <%= activity.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", activity_path(activity) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_activity_path(activity) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", activity_path(activity), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @activities  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
