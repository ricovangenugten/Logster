<div class="block">
  <%= render :partial => 'navigation/secondary', :locals => {:mode => 'all_logs'} %>
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Logs</h2>
    <div class="inner">
      <% if @requested_today %>
        <p class="date_selector">
          <%= link_to image_tag("resultset_previous.png"), root_path(:date => @requested_date.yesterday) %> 
          Today
        </p>
      <% else %>
        <p class="date_selector">
          <%= link_to image_tag("resultset_previous.png"), root_path(:date => @requested_date.yesterday) %> 
          <%= @requested_date %> 
          <%= link_to image_tag("resultset_next.png"), root_path(:date => @requested_date.tomorrow) %>
          <%= link_to image_tag("resultset_last.png"), root_path %>
        </p>
      <% end %>

      <%= render :partial => 'logs/logs', :locals => {:mode => 'all_logs'} %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
